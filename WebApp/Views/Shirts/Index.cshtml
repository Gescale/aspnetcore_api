@model List<Shirt>

    <h3>Shirts</h3>
    <b/>
<table class="table table-striped table-hover">
    <caption>List of shirts</caption>
    <thead>
        <tr>
            <td scope="col">BrandName</td>
            <td scope="col">Gender</td>
            <td scope="col">Colour</td>
            <td scope="col">Size</td>
            <td scope="col">Price</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var shirt in Model)
        {
            <tr>
                <td class="fw-light">@shirt.BrandName</td>
                <td class="fw-light">@shirt.Gender</td>
                <td class="fw-light">@shirt.Colour</td>
                <td class="fw-light">@shirt.Size</td>
                <td class="fw-light">@(shirt.Price.HasValue? shirt.Price.Value.ToString("c"):"")</td>
                <td> 
                    <a class="btn btn-link" asp-controller="shirts" asp-action="updateshirt" asp-route-shirtId="@shirt.ShirtId" />
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                    </svg>
                </td>
                <td>
                    <a class="btn btn-link" asp-controller="shirts" asp-action="emailshirt" asp-route-shirtId="@shirt.ShirtId" />
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope-arrow-up-fill" viewBox="0 0 16 16">
                        <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414zM0 4.697v7.104l5.803-3.558zm.192 8.159 6.57-4.027L8 9.586l1.239-.757.367.225A4.49 4.49 0 0 0 8 12.5c0 .526.09 1.03.256 1.5H2a2 2 0 0 1-1.808-1.144M16 4.697v4.974A4.5 4.5 0 0 0 12.5 8a4.5 4.5 0 0 0-1.965.45l-.338-.207z" />
                        <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.354-5.354 1.25 1.25a.5.5 0 0 1-.708.708L13 12.207V14a.5.5 0 0 1-1 0v-1.717l-.28.305a.5.5 0 0 1-.737-.676l1.149-1.25a.5.5 0 0 1 .722-.016" />
                    </svg>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <br />
    <a class"btn btn-primary fw-light" role="button" asp-controller="shirts" asp-action="createshirt">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus" viewBox="0 0 16 16">
            <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5" />
            <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5z" />
        </svg>
        create
    </a>
    <a class"btn btn-primary fw-light" role="button" asp-controller="shirts" asp-action="createshirt">
        <i class="bi bi-plus-circle"></i>
        create
    </a>
